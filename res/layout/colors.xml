<?xml version="1.0" encoding="utf-8"?>
<view
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:markers="http://schemas.android.com/apk/res/com.google.android.markersbeta"
    class="com.google.android.markersbeta.MarkersActivity$ColorList"
    style="@style/ActionBar.Bar"
    android:id="@+id/colors"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:clickable="true"
    android:paddingTop="4dp"
    >
    <Button
        android:id="@+id/black"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:background="#FF000000"
        android:layout_gravity="center"
        android:textColor="#FFFFFFFF"
        />
    <Button
        android:id="@+id/white"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:background="#FFFFFFFF"
        android:layout_gravity="center"
        />

    <Button
        android:id="@+id/lgray"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:background="#FFC0C0C0"
        android:layout_gravity="center"
        />
    <Button
        android:id="@+id/gray"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:background="#FF808080"
        android:layout_gravity="center"
        />
    <Button
        android:id="@+id/dgray"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:background="#FF404040"
        android:layout_gravity="center"
        />

    <Button
        android:id="@+id/red"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:background="#FFFF0000"
        android:layout_gravity="center"
        />
    <Button
        android:id="@+id/green"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:background="#FF00FF00"
        android:layout_gravity="center"
        />
    <Button
        android:id="@+id/blue"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:background="#FF0000FF"
        android:layout_gravity="center"
        />

    <Button
        android:id="@+id/pink"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:background="#FFFF00CC"
        android:layout_gravity="center"
        />
    <Button
        android:id="@+id/orange"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:background="#FFFF8000"
        android:layout_gravity="center"
        />
    <Button
        android:id="@+id/yellow"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:background="#FFFFFF00"
        android:layout_gravity="center"
        />
    <Button
        android:id="@+id/purple"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:background="#FF6000A0"
        android:layout_gravity="center"
        />
    <Button
        android:id="@+id/brown"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:background="#FF804000"
        android:layout_gravity="center"
        />
    <Button
        android:id="@+id/erase"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:background="@drawable/transparent_tool"
        android:layout_gravity="center"
        android:textColor="#FFFFFFFF"
        />
</view>
