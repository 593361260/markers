<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/actionbar"
  android:layout_width="match_parent"
  android:layout_height="@dimen/button_bar_height"
  >
  <RelativeLayout
  	android:id="@+id/actionbar_contents"
    style="@style/ActionBar.Bar"
  	android:layout_width="match_parent"
  	android:layout_height="match_parent"
  	android:layout_alignParentLeft="true"
  	android:visibility="gone"
  	android:padding="2dp"
  	android:paddingRight="6dp"
  	android:clickable="true"
  	android:soundEffectsEnabled="false"
  	>
	  <TextView
	    android:id="@+id/logotype"
        style="@style/ActionBar.Text"
	    android:text="@string/app_name"
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent"
	    android:gravity="center_vertical"
	    android:layout_alignParentLeft="true"
	    android:layout_centerVertical="true" 
	  	android:layout_marginLeft="@dimen/action_bar_logo_width"
	    />
	  
      <LinearLayout android:orientation="horizontal"
          android:layout_height="match_parent"
          android:layout_width="wrap_content"
          android:layout_alignParentRight="true"
          >
          <ImageButton
            android:id="@+id/debug"
            style="@style/ActionBar.Icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/bug" 
            android:contentDescription="debug mode"
            android:onClick="clickDebug"
            />
          <ImageView 
            android:src="@drawable/divider" 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            />
          <ImageButton
            android:id="@+id/undo"
            android:src="@drawable/undo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" 
            android:contentDescription="undo"
            android:onClick="clickUndo"
            style="@style/ActionBar.Icon"
            />  
          <ImageView 
            android:src="@drawable/divider" 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            />
          <ImageButton
            android:id="@+id/load"
            android:src="@drawable/load"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" 
            android:contentDescription="load image"
            android:onClick="clickLoad"
            style="@style/ActionBar.Icon"
            />  
          <ImageView 
            android:src="@drawable/divider" 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            />
          <ImageButton
            android:id="@+id/save" 
            android:src="@drawable/newpage3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" 
            android:contentDescription="new drawing"
            android:onClick="clickSaveAndClear"
            style="@style/ActionBar.Icon"
            />  
          <ImageView 
            android:src="@drawable/divider" 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            />
          <ImageButton
            android:id="@+id/share" 
            android:src="@drawable/share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" 
            android:contentDescription="share drawing"
            android:onClick="clickShare"
            style="@style/ActionBar.Icon"
            />  
      </LinearLayout>
  </RelativeLayout>
  <ImageView
  	android:id="@+id/logo"
  	android:src="@drawable/icon"
  	android:layout_width="@dimen/action_bar_logo_width"
  	android:layout_height="@dimen/action_bar_height"
  	android:layout_alignParentLeft="true"
  	android:padding="2dp"
  	android:onClick="clickLogo"
  	android:alpha="0.5"
  	/>
</RelativeLayout>
